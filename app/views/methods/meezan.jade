extends ../layout

block content
  input(type="hidden" value="ref,sender_account_no" name="id_fields")

  .field-group
    label(for="reference")
      | Reference Number
      span.red
        | *
    .field
      input(type="text" id="reference" name="ref" value="#{agencia || ''}" required)
      small.hint Transaction ID should appear on your bank statement as Trx ID, STAN number or Reference number depending on your bank and method of transfer .
  .field-group
    label(for="account_no")
      | Account Number
      span.red
        | *
    .field
      input(type="text" id="account_no" name="sender_account_no" value="#{documento || ''}" required)
      small.hint Your complete bank account number from which the payment was transferred
